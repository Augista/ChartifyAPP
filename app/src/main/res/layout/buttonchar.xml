<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul Aplikasi -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charactify"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawablePadding="8dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"/>

        <!-- Kategori Fiction -->
        <TextView
            android:id="@+id/fictionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fiction"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:rowCount="1"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/characterTsubasa"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tsubasa"
                    android:contentDescription="Tsubasa"
                    android:onClick="onCharacterClick"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tsubasa"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

        </GridLayout>

        <!-- Kategori Non-Fic -->
        <TextView
            android:id="@+id/nonFicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Non-Fic"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignMargins"
            android:rowCount="1">

            <!-- Gambar Karakter Non-Fic -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/characterBJHabibie"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/bjhabibi"
                    android:contentDescription="BJ Habibie"
                    android:onClick="onCharacterClick"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BJ Habibie"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="8dp">
                <ImageView
                    android:id="@+id/characterAlbertEinstein"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/albert"
                    android:contentDescription="Albert Einstein"
                    android:onClick="onCharacterClick"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Albert Einstein"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
